#!/usr/bin/env bash
# This script manages the manage_my_process script (start, stop, restart)

pidfile="/var/run/my_process.pid"
process_name="manage_my_process"

start_process() {
  if [ -f "$pidfile" ]; then
    echo "$process_name is already running."
  else
    ./$process_name &  # Start manage_my_process in the background
    echo $! > "$pidfile"  # Write the PID to the PID file
    echo "$process_name started"
  fi
}

stop_process() {
  if [ -f "$pidfile" ]; then
    kill "$(cat "$pidfile")"  # Kill the process using the PID from the file
    rm -f "$pidfile"  # Remove the PID file
    echo "$process_name stopped"
  else
    echo "$process_name is not running."
  fi
}

restart_process() {
  stop_process  # Stop the process first
  start_process  # Then start it again
  echo "$process_name restarted"
}

# Handle command-line arguments
case "$1" in
  start)
    start_process
    ;;
  stop)
    stop_process
    ;;
  restart)
    restart_process
    ;;
  *)
    echo "Usage: $process_name {start|stop|restart}"
    exit 1
    ;;
esac

